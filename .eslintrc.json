{
    "extends": "airbnb",
    "plugins": [
        "flowtype"
    ],
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4],
        "import/extensions": [
            "error",
            "always",
            {
              "js": "never",
              "jsx": "never",
              "mjs": "never"
            }
          ]
    }
}