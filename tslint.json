{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-eslint-rules"
    ],
    "jsRules": {},
    "rules": {
        "ter-indent": {
            "severity": "error",
            "options": 4
        },
        "import-name": {
            "severity": "off"
        }
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "frontend/dist",
            "server/dist",
            "node_modules"
        ]
    }
}